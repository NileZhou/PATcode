#include<cstdio>
#include<cmath>

using namespace std;

const int N = 10;

bool cols[N] = {false};
int res[N];

int cnt = 0; // counter

void arrange(int index, int n) {
    if (index == n) {
        for (int i=0; i<n; ++i) {
            printf("%d ", res[i]);
        }
        printf("\n");
        cnt++;
    }

    for (int i=0; i<n; ++i) {
        if (cols[i] == false) {
            bool peace = true;
            // 只要其中一个冲突，就不能放置
            for (int j=0; j<index; ++j) {
                if (abs(i-j) == abs(i-res[j])) {
                    peace = false;
                    break;
                }
            }
            if (peace) {
                cols[i] = true;
                res[index] = i+1;
                arrange(index+1, n);
                cols[i] = false;
            }
        }
    }
}


int main() {
    arrange(0, 8);
    printf("\nnum of all arrange: %d\n", cnt);

    return 0;
}

